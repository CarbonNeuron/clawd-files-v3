    <script>
        // Highlight code blocks and wrap lines for CSS counter line numbers.
        // innerHTML is used here on highlight.js's own trusted output (already
        // sanitized tokens), not on user-supplied HTML.
        function highlightAndAddLines() {
            document.querySelectorAll('pre code[class*="language-"]').forEach(function (block) {
                if (block.dataset.highlighted) return;
                hljs.highlightElement(block);
                var lines = block.innerHTML.split('\n');
                if (lines[lines.length - 1] === '') lines.pop();
                block.innerHTML = lines.map(function (line) {
                    return '<span class="hljs-ln-line">' + line + '</span>';
                }).join('');
            });
        }
    </script>
