@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<div style="padding-top: 40px;">
    <div class="terminal-panel" style="border-color: rgba(239, 68, 68, 0.3);">
        <div class="terminal-panel-header" style="border-color: rgba(239, 68, 68, 0.2);">
            <div class="terminal-panel-header-dot" style="background: var(--abyss-danger); box-shadow: 0 0 6px rgba(239, 68, 68, 0.4);"></div>
            <span class="terminal-panel-header-title" style="color: #fca5a5;">System Error</span>
        </div>
        <div class="terminal-panel-body">
            <p style="color: #fca5a5; font-family: var(--font-mono); font-size: 0.9rem; margin-bottom: 16px;">
                An error occurred while processing your request.
            </p>

            @if (ShowRequestId)
            {
                <div class="meta-tag" style="margin-bottom: 16px; display: inline-flex;">
                    <span class="meta-tag-label">Request ID</span>
                    <code style="color: var(--abyss-text-dim);">@RequestId</code>
                </div>
            }

            <hr class="section-rule" />

            <p style="color: var(--abyss-muted); font-size: 0.8rem; line-height: 1.6;">
                Swapping to the <strong>Development</strong> environment will display more detailed information.
                The Development environment shouldn't be enabled for deployed applications as it can expose sensitive data.
            </p>
        </div>
    </div>
</div>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
